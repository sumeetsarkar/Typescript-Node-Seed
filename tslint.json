{
  "extends": "tslint-config-airbnb",
  "jsRules": {
    "no-empty": true
  },
  "rules": {
    "variable-name": [
      true,
      "allow-leading-underscore"
    ],
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "never",
          "typeLiterals": "ignore"
        },
        "esSpecCompliant": true
      }
    ],
    "no-duplicate-imports": false,
    "no-internal-module": true,
    "no-trailing-whitespace": true,
    "no-null-keyword": true,
    "prefer-const": true,
    "jsdoc-format": true
  }
}